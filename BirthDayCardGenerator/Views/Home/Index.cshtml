@model BirthDayCardGenerator.Models.CardData
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
</head>

<body>

    <div class="text-md-start">
        @*<h1 class="display-4">Send a Birthday Card</h1>*@
        <h1 style="align-content:flex-start">Send a Birthday Card</h1>
        @*<p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>*@

        <form asp-action="BirthdayCardForm">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="container mt-5">
                <div class="row">
                    <div class="col-lg-1">
                        <label asp-for="From" class="control-label"></label>
                    </div>
                    <div class="col-lg-3">
                        <input asp-for="From" class="form-control" />
                        <span asp-validation-for="From" class="text-danger"></span>
                    </div>

                    <div class="col-lg-8">

                    </div>

                </div>

                <br />

                <div class="row">
                    <div class="col-lg-1">
                        <label asp-for="To" class="control-label"></label>
                    </div>
                    <div class="col-lg-3">
                        <input asp-for="To" class="form-control" />
                        <span asp-validation-for="To" class="text-danger"></span>
                    </div>

                    <div class="col-lg-8">

                    </div>

                </div>
                <br />

                <div class="row">
                    <div class="col-lg-1">
                        <label asp-for="Message" class="control-label"></label>
                    </div>
                    <div class="col-lg-5">
                        <input asp-for="Message" class="form-control" />
                        <span asp-validation-for="Message" class="text-danger" style="height:300px"></span>
                    </div>

                    <div class="col-lg-6">

                    </div>

                </div>
                <br />

                <div class="row">
                    <div class="col-lg-1">

                    </div>
                    <div class="col-lg-2">
                        <div class="form-group">
                            <input type="submit" value="Send Card" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            </div>

           
        </form>

    </div>
</body>



</html>




